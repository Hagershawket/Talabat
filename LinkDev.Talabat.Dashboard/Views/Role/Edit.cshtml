@model RoleFormViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Roles</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="mt-4">
                <div class="form-group mt-2">
                    <label asp-for="Name" class="form-control"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="input-group mt-2 justify-content-center">
                    <button type="submit" class="btn btn-success m-2">Edit</button>
                    <a class="btn btn-secondary m-2" asp-action="Index">Back to Index</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}