@model IEnumerable<IdentityRole>
@{
	ViewData["Title"] = "Roles";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Roles</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
        <li class="breadcrumb-item active">List</li>
    </ol>
    <div class="card mb-4"> 
        <div class="card-body">
            <partial name="Partials/RoleFormPartialView" model="new RoleFormViewModel()"/>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(R => R.Id)</th>
                        <th>@Html.DisplayNameFor(R => R.Name)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id"><i class="fas fa-edit"></i> Edit</a>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@role.Id">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal-@role.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="deleteModal-@role.Id">Delete Role</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you would like to do this?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
